@@ -0,0 +1,23 @@
+# default with dmix/dsnoop
+tegra-alc5632.pcm.default {
+       @args [ CARD ]
+       @args.CARD {
+               type string
+       }
+       type asym
+       playback.pcm {
+               type plug
+               slave.pcm {
+                       @func concat
+                       strings [ "dmix:CARD=" $CARD ",RATE=44100" ]
+               }
+       }
+       capture.pcm {
+               type plug
+               slave.pcm {
+                       @func concat
+                       strings [ "dsnoop:CARD=" $CARD ",RATE=44100" ]
+               }
+       }
+}
