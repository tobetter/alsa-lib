#!/usr/bin/make -f
#
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE:= alsa-lib
include /usr/share/dpatch/dpatch.make

export DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
export DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS = -g -Wall

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif


configure: configure-stamp
configure-stamp:
	dh_testdir

	-rm -f config.sub config.guess
	ln -s /usr/share/misc/config.sub config.sub
	ln -s /usr/share/misc/config.guess config.guess

	./configure --prefix=/usr \
		    --mandir=\$${prefix}/share/man \
		    --infodir=\$${prefix}/share/info \
		    --host=$(DEB_HOST_GNU_TYPE) \
		    --build=$(DEB_BUILD_GNU_TYPE) \
		    --enable-static
	touch configure-stamp

build: build-stamp-arch
build-stamp-arch: patch-stamp configure-stamp
	dh_testdir

	$(MAKE) CFLAGS="$(CFLAGS)"
	$(MAKE) -C src/pcm/ext jack CFLAGS="$(CFLAGS)"

	touch build-stamp-arch
build-stamp-indep: patch-stamp configure-stamp
	dh_testdir

	$(MAKE) doc CFLAGS="$(CFLAGS)"

	touch build-stamp-indep

clean: unpatch
	dh_testdir
	dh_testroot

	-$(MAKE) distclean
	-rm -f configure-stamp build-stamp-arch build-stamp-indep config.status config.cache
	-rm -f config.sub config.guess
	-rm -rf doc/doxygen

	dh_clean

install-indep: build-stamp-indep
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -i
	
	install -d -m 0755 debian/tmp/usr/share/doc/libasound2-dev/
	cp -r doc/doxygen/html debian/tmp/usr/share/doc/libasound2-dev/

	dh_install -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installchangelogs -i
	dh_strip -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i

install-arch: build-stamp-arch
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -a

	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
#	Broken upstream makefile...
#	$(MAKE) -C src/pcm/ext install-jack DESTDIR=$(CURDIR)/debian/tmp
	install -d -m 755 debian/tmp/usr/lib/alsa-lib
	install -m 0644 -p src/pcm/ext/.libs/libasound_module_pcm_jack.so.2.0.0 debian/tmp/usr/lib/alsa-lib/libasound_module_pcm_jack.so.2.0.0

	dh_install -a
	dh_installdocs -a
	dh_installexamples -a
	dh_installchangelogs -a
	dh_strip -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a

binary-indep: build-stamp-indep install-indep
	dh_testdir
	dh_testroot
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build-stamp-arch install-arch
	dh_testdir
	dh_testroot
	dh_makeshlibs -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary:	binary-arch binary-indep

.PHONY: build clean binary binary-arch binary-indep install-arch install-indep configure
