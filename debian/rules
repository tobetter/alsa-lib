#!/usr/bin/make -f

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)
export DEB_BUILD_MAINT_OPTIONS = hardening=+all


%:
	dh $@ --with autoreconf

override_dh_auto_configure:
	dh_auto_configure -- \
		--with-plugindir=/usr/lib/$(DEB_HOST_MULTIARCH)/alsa-lib \
		--disable-silent-rules \
		--disable-static \
		--disable-python

override_dh_auto_build-indep:
	dh_auto_build
	$(MAKE) doc

override_dh_auto_test-indep:

override_dh_auto_install-indep:
	dh_auto_build
	find doc -name '*.md5' -exec rm -f {} \;
	rm -r doc/doxygen/html/search/all_a.js
	rm -r doc/doxygen/html/search/all_f.js
	rm -r doc/doxygen/html/search/all_14.js
	rm -r doc/doxygen/html/search/all_15.js
	$(MAKE) -C doc install

override_dh_strip:
	dh_strip --dbgsym-migration='libasound2-dbg (<< 1.1.1-1~)'

override_dh_makeshlibs:
	dh_makeshlibs --exclude=usr/lib/$(DEB_HOST_MULTIARCH)/alsa-lib/smixer -V'libasound2 (>= 1.1.1)' --add-udeb=libasound2-udeb -- -c4

override_dh_install:
	dh_install --list-missing

override_dh_installchangelogs:
	dh_installchangelogs debian/changelog.ALSA
